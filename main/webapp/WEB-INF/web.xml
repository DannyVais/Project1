<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

   <servlet>
    <servlet-name>employeeLogin</servlet-name>
    <servlet-class>Servlets.EmployeeLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>employeeLogin</servlet-name>
    <url-pattern>/elogin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>Servlets.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>employeeProfile</servlet-name>
    <servlet-class>Servlets.EmployeeProfile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>employeeProfile</servlet-name>
    <url-pattern>/eprofile</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>managerLogin</servlet-name>
    <servlet-class>Servlets.ManagerLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>managerLogin</servlet-name>
    <url-pattern>/mLogin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>managerProfile</servlet-name>
    <servlet-class>Servlets.ManagerProfile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>managerProfile</servlet-name>
    <url-pattern>/mprofile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>viewEmployees</servlet-name>
    <servlet-class>Servlets.ViewEmployees</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>viewEmployees</servlet-name>
    <url-pattern>/viewEmp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>pendingRequests</servlet-name>
    <servlet-class>Servlets.PendingRequests</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pendingRequests</servlet-name>
    <url-pattern>/pendingReq</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>resolvedRequests</servlet-name>
    <servlet-class>Servlets.ResolvedRequests</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>resolvedRequests</servlet-name>
    <url-pattern>/resolvedReq</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>viewEmployeeRequests</servlet-name>
